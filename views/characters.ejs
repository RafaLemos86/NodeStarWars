<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Detalhes dos Personagens - Star Wars</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">

    <!-- Font Awesome CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">
</head>
<body class="bg-dark text-light">

    <div class="container mt-5">
        <h1 class="display-4 mb-4"><i class="fas fa-users"></i> Detalhes dos Personagens</h1>

        <% characters.forEach(character => { %>
            <h2 class="mb-3"><i class="fas fa-user"></i> <%= character.name %></h2>

            <table class="table table-dark table-striped">
                <tbody>
                    <tr>
                        <th scope="row">Nome</th>
                        <td><%= character.name %></td>
                    </tr>
                    <tr>
                        <th scope="row">Ano de Nascimento</th>
                        <td>
                            <% if (character.birth_year.toLowerCase() === 'unknown') { %>
                                no date of birth
                            <% } else { %>
                                <%= character.birth_year %>
                            <% } %>
                        </td>
                    </tr>
                    <tr>
                        <th scope="row">GÃªnero</th>
                        <td>
                            <% if (character.gender.toLowerCase() === 'n/a') { %>
                                robot
                            <% } else { %>
                                <%= character.gender %>
                            <% } %>
                        </td>
                    </tr>
                    <tr>
                        <th scope="row">Altura</th>
                        <td><%= character.height %></td>
                    </tr>
                    <tr>
                        <th scope="row">Peso</th>
                        <td><%= character.mass %></td>
                    </tr>
                </tbody>
            </table>
        <% }); %>

        <a href="/" class="btn btn-warning"><i class="fas fa-arrow-left"></i> Voltar para a Rota Principal</a>
    </div>
</body>
</html>
